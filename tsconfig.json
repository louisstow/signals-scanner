{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./",
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },

  "exclude": ["./dist", "**/*.spec.ts"]
}
